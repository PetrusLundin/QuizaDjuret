@page "/"
@using QuizaDjuret.Client.Services;
@inject QuizService quizService

@* HTML HÄR *@
@*<h1>@text</h1>*@
<div class="background">
<div class="main-box-opacity">
    <div class="main-box-content">
    <h1>Välkommen till QuizaDjuret</h1>
	<h2>Hur du spelar Quizet:</h2>
	<p>・Rätt svar på första försöket ger: 100 poäng</p>
	<p>・Rätt svar på andra försöket ger: 50 poäng</p>
	<p>・Rätt svar på tredje försöket ger: 0 poäng</p>
	<hr />
	<p>・Tryck på knappen "ledtråd" för att få en ledtråd till frågan</p>
	<p>・Tryck på knappen "börja om" för att börja om quizet från början</p>
	<hr />
	<p>・I slutet kan du skriva in ditt namn för att ha chansen att hamna på din skolas highscorlista</p>

	<h3>Lycka till!!</h3>
    </div>

    </div>
</div>
<button @onclick="() => Click()">Starta Quizet</button>






@* REN C# HÄR *@
@code{
	private string text = "Hej på dig";
	public async void Click()
	{
		string newText = await quizService.Testget(1);
		text = newText;
	}
}